<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>0.0.1</PackageVersion>
        <Title>Linux Notifications Integration</Title>
        <Authors>@rbnswartz</Authors>
        <Description>Native Linux desktop notifications</Description>
        <Copyright>2021 Reuben Swartz</Copyright>
        <PackageProjectUrl>https://github.com/rbnswartz/LinuxIntegration.Notifications</PackageProjectUrl>
        <RepositoryUrl>https://github.com/rbnswartz/LinuxIntegration.Notifications</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Linux, Notifications</PackageTags>
        <PackageLicenseFile>license/LICENSE</PackageLicenseFile>
        <AssemblyVersion>0.0.1</AssemblyVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Tmds.DBus" Version="0.9.1" />
    </ItemGroup>
    <ItemGroup>
        <None Include="../LICENSE" Pack="true" PackagePath="license"/>
    </ItemGroup>

</Project>
